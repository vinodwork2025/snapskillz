---
// SnapSkillz AI-Powered Hero Section
// Advanced hero component with stunning visuals and animations

export interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  primaryCta?: {
    text: string;
    href: string;
  };
  secondaryCta?: {
    text: string;
    href: string;
  };
}

const {
  title = "Master Skills with AI-Powered Learning",
  subtitle = "AI-Powered Learning Platform",
  description = "Accelerate your learning journey with AI-driven resources, expert-curated content, and personalized study paths designed for modern professionals.",
  primaryCta = {
    text: "Start Learning",
    href: "https://gumroad.com/snapskillz"
  },
  secondaryCta = {
    text: "View Resources",
    href: "/features"
  }
} = Astro.props;
---

<section class="hero-section relative min-h-screen flex items-center overflow-hidden bg-gradient-to-br from-slate-700 via-blue-700 to-purple-700">
  <!-- Enhanced Professional Background -->
  <div class="absolute inset-0">
    <!-- Subtle Gradient Blobs -->
    <div class="absolute inset-0 opacity-60">
      <div class="absolute top-10 left-10 w-96 h-96 bg-gradient-to-r from-blue-400/25 to-cyan-400/25 rounded-full blur-3xl animate-float-slow"></div>
      <div class="absolute bottom-20 right-20 w-[500px] h-[500px] bg-gradient-to-r from-purple-400/20 to-pink-400/20 rounded-full blur-3xl animate-float-delayed"></div>
      <div class="absolute top-1/2 left-1/3 w-80 h-80 bg-gradient-to-r from-teal-400/15 to-emerald-400/15 rounded-full blur-3xl animate-float-slow"></div>
      <div class="absolute bottom-10 left-10 w-64 h-64 bg-gradient-to-r from-indigo-400/20 to-blue-400/20 rounded-full blur-3xl animate-float-reverse"></div>
    </div>

    <!-- Enhanced Floating Particles -->
    <div class="absolute inset-0">
      <div class="tile-particle tile-1"></div>
      <div class="tile-particle tile-2"></div>
      <div class="tile-particle tile-3"></div>
      <div class="tile-particle tile-4"></div>
      <div class="tile-particle tile-5"></div>
      <div class="tile-particle tile-6"></div>
      <div class="tile-particle tile-7"></div>
      <div class="tile-particle tile-8"></div>
      <div class="tile-particle tile-9"></div>
      <div class="tile-particle tile-10"></div>
    </div>

    <!-- Advanced Grid Pattern -->
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.05"%3E%3Ccircle cx="50" cy="50" r="1"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-40"></div>
  </div>

  <!-- Content Container -->
  <div class="container mx-auto px-6 relative z-10 pt-32 pb-16">
    <div class="grid lg:grid-cols-2 gap-16 items-center min-h-[calc(100vh-16rem)]">
      
      <!-- Left Content -->
      <div class="text-center lg:text-left space-y-8">
        <!-- Enhanced Professional Badge -->
        <div class="inline-flex items-center px-6 py-3 rounded-full bg-white/10 backdrop-blur-md border border-white/20 font-semibold text-sm transition-all duration-300 text-white/90 shadow-xl">
          <div class="w-2 h-2 bg-gradient-to-r from-cyan-400 to-blue-400 rounded-full mr-3 animate-pulse"></div>
          <span class="tracking-wide uppercase">{subtitle}</span>
        </div>

        <!-- Clean Main Title -->
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold leading-relaxed tracking-tight">
          <span class="block mb-2 animate-fade-in-up text-white">
            Master Skills with
          </span>
          <span class="block bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent animate-fade-in-up animation-delay-200">
            AI-Powered Learning
          </span>
        </h1>

        <!-- Clean Description -->
        <p class="text-lg sm:text-xl max-w-2xl mx-auto lg:mx-0 leading-relaxed animate-fade-in-up animation-delay-400 text-white/90">
          {description}
        </p>

        <!-- Clean Stats -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-8 animate-fade-in-up animation-delay-600">
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold mb-1 text-blue-300">50K+</div>
            <div class="text-sm font-medium text-white/70">Students Served</div>
          </div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold mb-1 text-purple-300">100+</div>
            <div class="text-sm font-medium text-white/70">Expert Resources</div>
          </div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold mb-1 text-emerald-300">4.9/5</div>
            <div class="text-sm font-medium text-white/70">Average Rating</div>
          </div>
        </div>

        <!-- Clean CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-fade-in-up animation-delay-800">
          <a 
            href={primaryCta.href}
            target="_blank"
            class="px-8 py-4 bg-white text-gray-900 rounded-lg font-semibold text-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300"
          >
            {primaryCta.text}
          </a>
          
          <a 
            href={secondaryCta.href}
            class="px-8 py-4 border-2 border-white/50 text-white rounded-lg font-semibold text-lg hover:bg-white/10 transition-all duration-300"
          >
            {secondaryCta.text}
          </a>
        </div>

        <!-- Trust Indicators -->
        <div class="flex flex-col md:flex-row justify-center lg:justify-start items-center space-y-4 md:space-y-0 md:space-x-8 text-white/60 animate-fade-in-up animation-delay-1000">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-sm font-medium">Free Resources Available</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-sm font-medium">Instant AI-Powered Learning</span>
          </div>
        </div>
      </div>

      <!-- Right Visual Content -->
      <div class="relative">
        <!-- Main AI Visual with Brain -->
        <div class="relative w-full max-w-lg mx-auto">
          <!-- Central AI Core -->
          <div class="relative w-80 h-80 mx-auto mb-8">
            <!-- Outer Ring -->
            <div class="absolute inset-0 rounded-full border-2 border-cyan-400/30 animate-spin-slow">
              <div class="absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-2 w-4 h-4 bg-cyan-400 rounded-full animate-pulse"></div>
              <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 translate-y-2 w-4 h-4 bg-purple-500 rounded-full animate-pulse"></div>
              <div class="absolute left-0 top-1/2 transform -translate-y-1/2 -translate-x-2 w-4 h-4 bg-blue-500 rounded-full animate-pulse"></div>
              <div class="absolute right-0 top-1/2 transform -translate-y-1/2 translate-x-2 w-4 h-4 bg-pink-500 rounded-full animate-pulse"></div>
            </div>

            <!-- Middle Ring -->
            <div class="absolute inset-8 rounded-full border-2 border-purple-500/40 animate-reverse-spin">
              <div class="absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-1 w-3 h-3 bg-purple-500 rounded-full"></div>
              <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 translate-y-1 w-3 h-3 bg-cyan-400 rounded-full"></div>
            </div>

            <!-- Inner Core with AI Brain -->
            <div class="absolute inset-16 rounded-full bg-gradient-to-br from-blue-500/20 to-purple-500/20 backdrop-blur-sm border border-white/20 flex items-center justify-center">
              <!-- AI Neural Network Brain Icon -->
              <svg class="w-24 h-24 text-white animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <!-- Brain outline -->
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                      d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                
                <!-- Neural network nodes -->
                <circle cx="7" cy="7" r="1" fill="currentColor" opacity="0.8">
                  <animate attributeName="r" values="0.8;1.2;0.8" dur="2s" repeatCount="indefinite"/>
                </circle>
                <circle cx="12" cy="6" r="1" fill="currentColor" opacity="0.9">
                  <animate attributeName="r" values="0.8;1.2;0.8" dur="2s" repeatCount="indefinite" begin="0.3s"/>
                </circle>
                <circle cx="17" cy="7" r="1" fill="currentColor" opacity="0.8">
                  <animate attributeName="r" values="0.8;1.2;0.8" dur="2s" repeatCount="indefinite" begin="0.6s"/>
                </circle>
                <circle cx="8" cy="10" r="1" fill="currentColor" opacity="0.7">
                  <animate attributeName="r" values="0.8;1.2;0.8" dur="2s" repeatCount="indefinite" begin="0.9s"/>
                </circle>
                <circle cx="12" cy="11" r="1" fill="currentColor" opacity="0.9">
                  <animate attributeName="r" values="0.8;1.2;0.8" dur="2s" repeatCount="indefinite" begin="1.2s"/>
                </circle>
                <circle cx="16" cy="10" r="1" fill="currentColor" opacity="0.7">
                  <animate attributeName="r" values="0.8;1.2;0.8" dur="2s" repeatCount="indefinite" begin="1.5s"/>
                </circle>
                <circle cx="10" cy="14" r="1" fill="currentColor" opacity="0.8">
                  <animate attributeName="r" values="0.8;1.2;0.8" dur="2s" repeatCount="indefinite" begin="1.8s"/>
                </circle>
                <circle cx="14" cy="14" r="1" fill="currentColor" opacity="0.8">
                  <animate attributeName="r" values="0.8;1.2;0.8" dur="2s" repeatCount="indefinite" begin="0.5s"/>
                </circle>

                <!-- Neural connections -->
                <path stroke-width="0.5" opacity="0.5" d="M7,7 L12,6 M12,6 L17,7 M7,7 L8,10 M12,6 L12,11 M17,7 L16,10 M8,10 L12,11 M12,11 L16,10 M8,10 L10,14 M12,11 L10,14 M12,11 L14,14 M16,10 L14,14">
                  <animate attributeName="opacity" values="0.2;0.7;0.2" dur="3s" repeatCount="indefinite"/>
                </path>

                <!-- AI chip/processor elements -->
                <rect x="10" y="8" width="4" height="2" rx="0.5" fill="currentColor" opacity="0.6">
                  <animate attributeName="opacity" values="0.4;0.8;0.4" dur="2.5s" repeatCount="indefinite"/>
                </rect>
              </svg>
            </div>
          </div>

          <!-- Floating Feature Cards -->
          <div class="absolute -top-4 -left-8 transform hover:scale-110 transition-transform duration-300">
            <div class="backdrop-blur-sm rounded-2xl p-4 border border-white/20 shadow-xl bg-white/90">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-gradient-to-br from-green-400 to-emerald-500 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-bold text-sm sm:text-base text-gray-900">Smart Quizzes</div>
                  <div class="text-xs sm:text-sm font-medium text-gray-600">AI-powered assessments</div>
                </div>
              </div>
            </div>
          </div>

          <div class="absolute -top-8 -right-4 transform hover:scale-110 transition-transform duration-300">
            <div class="backdrop-blur-sm rounded-2xl p-4 border border-white/20 shadow-xl bg-white/90">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-gradient-to-br from-purple-400 to-pink-500 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-bold text-sm sm:text-base text-gray-900">Mock Interviews</div>
                  <div class="text-xs sm:text-sm font-medium text-gray-600">Practice with AI</div>
                </div>
              </div>
            </div>
          </div>

          <div class="absolute -bottom-4 -left-4 transform hover:scale-110 transition-transform duration-300">
            <div class="backdrop-blur-sm rounded-2xl p-4 border border-white/20 shadow-xl bg-white/90">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-cyan-500 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-bold text-sm sm:text-base text-gray-900">Study Guides</div>
                  <div class="text-xs sm:text-sm font-medium text-gray-600">Expert resources</div>
                </div>
              </div>
            </div>
          </div>

          <div class="absolute -bottom-8 -right-8 transform hover:scale-110 transition-transform duration-300">
            <div class="backdrop-blur-sm rounded-2xl p-4 border border-white/20 shadow-xl bg-white/90">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-bold text-sm sm:text-base text-gray-900">Smart Learning</div>
                  <div class="text-xs sm:text-sm font-medium text-gray-600">Adaptive paths</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-gray-400 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-gray-400 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>

<style>
  /* Advanced Animations */
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes reverse-spin {
    from {
      transform: rotate(360deg);
    }
    to {
      transform: rotate(0deg);
    }
  }

  @keyframes dash {
    0% {
      stroke-dasharray: 0 100;
    }
    100% {
      stroke-dasharray: 100 0;
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animation Classes */
  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  .animation-delay-6000 {
    animation-delay: 6s;
  }

  .animate-spin-slow {
    animation: spin-slow 20s linear infinite;
  }

  .animate-reverse-spin {
    animation: reverse-spin 15s linear infinite;
  }

  .animate-dash {
    stroke-dasharray: 100 100;
    animation: dash 3s linear infinite;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
    opacity: 0;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }

  .animation-delay-600 {
    animation-delay: 0.6s;
  }

  .animation-delay-800 {
    animation-delay: 0.8s;
  }

  .animation-delay-1000 {
    animation-delay: 1s;
  }

  /* Floating Tile Particles */
  .tile-particle {
    position: absolute;
    width: 6px;
    height: 6px;
    background: linear-gradient(45deg, #3b82f6, #8b5cf6);
    border-radius: 2px;
    opacity: 0.4;
    animation: float-tile 8s ease-in-out infinite;
  }

  .tile-1 {
    top: 15%;
    left: 8%;
    animation-delay: 0s;
    background: linear-gradient(45deg, #3b82f6, #06b6d4);
  }

  .tile-2 {
    top: 25%;
    right: 12%;
    animation-delay: 1s;
    background: linear-gradient(45deg, #8b5cf6, #d946ef);
  }

  .tile-3 {
    top: 45%;
    left: 15%;
    animation-delay: 2s;
    background: linear-gradient(45deg, #10b981, #059669);
  }

  .tile-4 {
    top: 65%;
    right: 20%;
    animation-delay: 3s;
    background: linear-gradient(45deg, #f59e0b, #d97706);
  }

  .tile-5 {
    top: 35%;
    right: 8%;
    animation-delay: 4s;
    background: linear-gradient(45deg, #ef4444, #dc2626);
  }

  .tile-6 {
    top: 75%;
    left: 25%;
    animation-delay: 5s;
    background: linear-gradient(45deg, #06b6d4, #0891b2);
  }

  .tile-7 {
    top: 55%;
    left: 5%;
    animation-delay: 6s;
    background: linear-gradient(45deg, #8b5cf6, #7c3aed);
  }

  .tile-8 {
    top: 85%;
    right: 15%;
    animation-delay: 7s;
    background: linear-gradient(45deg, #10b981, #047857);
  }

  .tile-9 {
    top: 20%;
    left: 35%;
    animation-delay: 8s;
    background: linear-gradient(45deg, #f472b6, #ec4899);
  }

  .tile-10 {
    top: 70%;
    right: 35%;
    animation-delay: 9s;
    background: linear-gradient(45deg, #06b6d4, #0e7490);
  }

  /* Enhanced floating animations */
  .animate-float-slow {
    animation: float-slow 12s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-slow 15s ease-in-out infinite;
    animation-delay: -5s;
  }

  .animate-float-reverse {
    animation: float-reverse 10s ease-in-out infinite;
  }

  @keyframes float-tile {
    0%, 100% {
      transform: translateY(0px) translateX(0px) rotate(0deg);
      opacity: 0.4;
    }
    25% {
      transform: translateY(-15px) translateX(8px) rotate(90deg);
      opacity: 0.6;
    }
    50% {
      transform: translateY(-8px) translateX(-8px) rotate(180deg);
      opacity: 0.3;
    }
    75% {
      transform: translateY(-20px) translateX(4px) rotate(270deg);
      opacity: 0.5;
    }
  }

  @keyframes float-slow {
    0%, 100% {
      transform: translateY(0px) translateX(0px);
    }
    33% {
      transform: translateY(-10px) translateX(5px);
    }
    66% {
      transform: translateY(-5px) translateX(-5px);
    }
  }
</style>