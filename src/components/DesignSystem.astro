---
// SnapSkillz Design System Components
// Reusable UI components with consistent styling

export interface ButtonProps {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'danger';
  size?: 'sm' | 'md' | 'lg' | 'xl';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  fullWidth?: boolean;
  class?: string;
}

export interface CardProps {
  variant?: 'default' | 'elevated' | 'bordered' | 'glass';
  padding?: 'sm' | 'md' | 'lg' | 'xl';
  hover?: boolean;
  class?: string;
}

export interface SectionProps {
  background?: 'white' | 'gray' | 'gradient-blue' | 'gradient-purple' | 'gradient-teal';
  padding?: 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
}
---

