---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Header />
  
  <main class="pt-24 relative overflow-hidden">
    <!-- Hero Section -->
    <section class="relative py-32 bg-gradient-to-br from-slate-900 via-blue-900 to-purple-900 overflow-hidden">
      <!-- Floating background elements -->
      <div class="absolute inset-0">
        <div class="absolute top-10 left-10 w-72 h-72 bg-gradient-to-r from-blue-500/20 to-cyan-500/20 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-gradient-to-r from-purple-500/20 to-pink-500/20 rounded-full blur-3xl animate-float-delayed"></div>
        <div class="absolute top-1/2 left-1/3 w-64 h-64 bg-gradient-to-r from-teal-500/15 to-emerald-500/15 rounded-full blur-3xl animate-float-slow"></div>
      </div>
      
      <!-- Backdrop pattern -->
      <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.03"%3E%3Ccircle cx="30" cy="30" r="1"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-40"></div>
      
      <div class="container mx-auto px-4 text-center relative z-10">
        <div class="inline-flex items-center bg-white/10 backdrop-blur-md border border-white/20 rounded-full px-6 py-3 mb-8 shadow-xl">
          <div class="w-2 h-2 bg-gradient-to-r from-cyan-400 to-blue-400 rounded-full mr-3 animate-pulse"></div>
          <span class="text-sm font-semibold text-white/90 tracking-wide uppercase">About SnapSkillz</span>
        </div>
        
        <h1 class="text-5xl sm:text-6xl md:text-7xl xl:text-8xl font-black mb-8 leading-[0.9]">
          <span class="bg-gradient-to-r from-white via-cyan-200 to-blue-200 bg-clip-text text-transparent drop-shadow-2xl">
            Revolutionizing
          </span>
          <br>
          <span class="bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 bg-clip-text text-transparent">
            Learning with AI
          </span>
        </h1>
        
        <p class="text-xl md:text-2xl text-white/80 max-w-4xl mx-auto leading-relaxed mb-12 font-light">
          SnapSkillz is on a mission to make high-quality, personalized learning accessible to everyone through the power of artificial intelligence and cutting-edge technology.
        </p>
        
        <!-- Floating metrics -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
          <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105">
            <div class="text-3xl font-bold text-cyan-300 mb-2">50K+</div>
            <div class="text-white/70 text-sm font-medium">Learners</div>
          </div>
          <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105">
            <div class="text-3xl font-bold text-purple-300 mb-2">1M+</div>
            <div class="text-white/70 text-sm font-medium">Quizzes</div>
          </div>
          <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105">
            <div class="text-3xl font-bold text-pink-300 mb-2">95%</div>
            <div class="text-white/70 text-sm font-medium">Success Rate</div>
          </div>
          <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105">
            <div class="text-3xl font-bold text-emerald-300 mb-2">24/7</div>
            <div class="text-white/70 text-sm font-medium">AI Support</div>
          </div>
        </div>
      </div>
      
      <!-- Bottom gradient fade -->
      <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-white to-transparent"></div>
    </section>

    <!-- Mission & Vision -->
    <section class="relative py-32 bg-gradient-to-br from-slate-50 via-white to-blue-50 overflow-hidden">
      <!-- Background decorative elements -->
      <div class="absolute inset-0">
        <div class="absolute top-20 -left-20 w-80 h-80 bg-gradient-to-r from-blue-500/10 to-cyan-500/10 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-20 -right-20 w-96 h-96 bg-gradient-to-r from-purple-500/10 to-pink-500/10 rounded-full blur-3xl"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-20">
          <div class="inline-flex items-center bg-gradient-to-r from-blue-600/10 to-purple-600/10 border border-blue-200/50 rounded-full px-6 py-3 mb-8">
            <div class="w-2 h-2 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full mr-3 animate-pulse"></div>
            <span class="text-sm font-semibold text-gray-700 tracking-wide uppercase">Our Purpose</span>
          </div>
          <h2 class="text-5xl md:text-6xl font-black mb-8 bg-gradient-to-r from-gray-900 via-blue-800 to-purple-800 bg-clip-text text-transparent leading-[0.9]">
            Empowering Every
            <br>
            Learner's Journey
          </h2>
        </div>

        <div class="grid lg:grid-cols-2 gap-20 items-center">
          <div class="space-y-8">
            <div class="bg-white/70 backdrop-blur-sm border border-white/50 rounded-3xl p-8 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-[1.02]">
              <div class="flex items-start space-x-6">
                <div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-cyan-600 rounded-2xl flex items-center justify-center shadow-lg flex-shrink-0">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-4">Our Mission</h3>
                  <p class="text-lg text-gray-600 leading-relaxed">
                    We believe that everyone deserves access to personalized, effective learning experiences. Our AI-powered platform adapts to each learner's unique pace, style, and goals, making skill development more efficient and engaging than ever before.
                  </p>
                </div>
              </div>
            </div>
            
            <div class="bg-white/70 backdrop-blur-sm border border-white/50 rounded-3xl p-8 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-[1.02]">
              <div class="flex items-start space-x-6">
                <div class="w-16 h-16 bg-gradient-to-r from-purple-600 to-pink-600 rounded-2xl flex items-center justify-center shadow-lg flex-shrink-0">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-4">Our Vision</h3>
                  <p class="text-lg text-gray-600 leading-relaxed">
                    To create a world where learning is limitless, where every individual can unlock their full potential through personalized AI-driven education that adapts, evolves, and inspires.
                  </p>
                </div>
              </div>
            </div>

            <!-- Impact metrics -->
            <div class="grid grid-cols-2 gap-6 mt-12">
              <div class="bg-gradient-to-r from-blue-600 to-cyan-600 rounded-2xl p-6 text-white shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
                <div class="text-3xl font-black mb-2">50K+</div>
                <div class="text-blue-100 font-medium">Learners Empowered</div>
              </div>
              <div class="bg-gradient-to-r from-purple-600 to-pink-600 rounded-2xl p-6 text-white shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
                <div class="text-3xl font-black mb-2">1M+</div>
                <div class="text-purple-100 font-medium">Skills Mastered</div>
              </div>
            </div>
          </div>

          <div class="relative">
            <!-- Enhanced feature showcase -->
            <div class="bg-white/80 backdrop-blur-lg border border-white/60 rounded-3xl p-10 shadow-2xl relative overflow-hidden">
              <!-- Background pattern -->
              <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 to-purple-50/50 rounded-3xl"></div>
              
              <div class="relative z-10 space-y-8">
                <div class="text-center mb-8">
                  <h3 class="text-2xl font-bold text-gray-900 mb-2">Why Choose SnapSkillz</h3>
                  <p class="text-gray-600">Experience the future of personalized learning</p>
                </div>
                
                <div class="space-y-6">
                  <div class="flex items-center space-x-5 p-4 bg-white/50 rounded-2xl backdrop-blur-sm border border-white/30 hover:bg-white/70 transition-all duration-300 hover:scale-[1.02]">
                    <div class="w-14 h-14 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center shadow-lg">
                      <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-bold text-gray-900 text-lg">AI-Powered Personalization</h4>
                      <p class="text-gray-600">Adaptive learning that evolves with your progress</p>
                    </div>
                  </div>
                  
                  <div class="flex items-center space-x-5 p-4 bg-white/50 rounded-2xl backdrop-blur-sm border border-white/30 hover:bg-white/70 transition-all duration-300 hover:scale-[1.02]">
                    <div class="w-14 h-14 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl flex items-center justify-center shadow-lg">
                      <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-bold text-gray-900 text-lg">Proven Results</h4>
                      <p class="text-gray-600">95% of learners see measurable improvement</p>
                    </div>
                  </div>
                  
                  <div class="flex items-center space-x-5 p-4 bg-white/50 rounded-2xl backdrop-blur-sm border border-white/30 hover:bg-white/70 transition-all duration-300 hover:scale-[1.02]">
                    <div class="w-14 h-14 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-xl flex items-center justify-center shadow-lg">
                      <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-bold text-gray-900 text-lg">Expert Community</h4>
                      <p class="text-gray-600">Learn from industry-leading professionals</p>
                    </div>
                  </div>
                  
                  <div class="flex items-center space-x-5 p-4 bg-white/50 rounded-2xl backdrop-blur-sm border border-white/30 hover:bg-white/70 transition-all duration-300 hover:scale-[1.02]">
                    <div class="w-14 h-14 bg-gradient-to-r from-amber-500 to-orange-500 rounded-xl flex items-center justify-center shadow-lg">
                      <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-bold text-gray-900 text-lg">24/7 Availability</h4>
                      <p class="text-gray-600">Learn anytime, anywhere with AI support</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="relative py-32 bg-gradient-to-br from-slate-900 via-gray-900 to-slate-900 overflow-hidden">
      <!-- Background effects -->
      <div class="absolute inset-0">
        <div class="absolute top-10 left-10 w-96 h-96 bg-gradient-to-r from-blue-600/20 to-purple-600/20 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-10 right-10 w-80 h-80 bg-gradient-to-r from-cyan-600/20 to-teal-600/20 rounded-full blur-3xl animate-float-delayed"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-72 h-72 bg-gradient-to-r from-purple-600/15 to-pink-600/15 rounded-full blur-3xl animate-float-slow"></div>
      </div>
      
      <!-- Grid pattern overlay -->
      <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="%23ffffff" fill-opacity="0.03"%3E%3Cpath d="M0 0h1v1H0zM50 0h1v1H50zM0 50h1v1H0zM50 50h1v1H50z"/%3E%3C/g%3E%3C/svg%3E')] opacity-30"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-20">
          <div class="inline-flex items-center bg-white/10 backdrop-blur-md border border-white/20 rounded-full px-6 py-3 mb-8 shadow-xl">
            <div class="w-2 h-2 bg-gradient-to-r from-cyan-400 to-blue-400 rounded-full mr-3 animate-pulse"></div>
            <span class="text-sm font-semibold text-white/90 tracking-wide uppercase">Our Leadership</span>
          </div>
          
          <h2 class="text-5xl md:text-6xl font-black mb-8 text-white leading-[0.9]">
            <span class="bg-gradient-to-r from-white via-cyan-200 to-blue-200 bg-clip-text text-transparent">
              Meet Our
            </span>
            <br>
            <span class="bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 bg-clip-text text-transparent">
              Visionary Team
            </span>
          </h2>
          
          <p class="text-xl text-white/70 max-w-3xl mx-auto leading-relaxed">
            A passionate group of educators, technologists, and AI experts dedicated to transforming the future of learning through innovation and expertise.
          </p>
        </div>
        
        <div class="grid lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <!-- Team Member 1 -->
          <div class="group relative bg-white/10 backdrop-blur-lg border border-white/20 rounded-3xl p-8 text-center shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-[1.05] hover:bg-white/15">
            <!-- Hover gradient effect -->
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-purple-500/10 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <div class="relative z-10">
              <div class="w-28 h-28 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-center text-white text-3xl font-black mx-auto mb-6 shadow-xl group-hover:scale-110 transition-transform duration-300 relative">
                <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full animate-pulse opacity-50"></div>
                <span class="relative z-10">A</span>
              </div>
              
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-cyan-200 transition-colors duration-300">Alex Rodriguez</h3>
              <p class="text-cyan-300 font-semibold mb-4 text-lg">CEO & Co-Founder</p>
              <p class="text-white/70 leading-relaxed group-hover:text-white/90 transition-colors duration-300">
                Former Google AI researcher with 10+ years in machine learning and education technology. Visionary leader driving AI innovation in learning.
              </p>
              
              <!-- Achievement badges -->
              <div class="flex justify-center space-x-2 mt-6">
                <div class="w-3 h-3 bg-gradient-to-r from-blue-400 to-cyan-400 rounded-full"></div>
                <div class="w-3 h-3 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full"></div>
                <div class="w-3 h-3 bg-gradient-to-r from-emerald-400 to-teal-400 rounded-full"></div>
              </div>
            </div>
          </div>
          
          <!-- Team Member 2 -->
          <div class="group relative bg-white/10 backdrop-blur-lg border border-white/20 rounded-3xl p-8 text-center shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-[1.05] hover:bg-white/15">
            <!-- Hover gradient effect -->
            <div class="absolute inset-0 bg-gradient-to-br from-purple-500/10 to-pink-500/10 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <div class="relative z-10">
              <div class="w-28 h-28 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center text-white text-3xl font-black mx-auto mb-6 shadow-xl group-hover:scale-110 transition-transform duration-300 relative">
                <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-pink-600 rounded-full animate-pulse opacity-50"></div>
                <span class="relative z-10">S</span>
              </div>
              
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-purple-200 transition-colors duration-300">Sarah Kim</h3>
              <p class="text-purple-300 font-semibold mb-4 text-lg">CTO & Co-Founder</p>
              <p class="text-white/70 leading-relaxed group-hover:text-white/90 transition-colors duration-300">
                Ex-Microsoft engineer specializing in adaptive learning systems and natural language processing. Technical architect behind our AI platform.
              </p>
              
              <!-- Achievement badges -->
              <div class="flex justify-center space-x-2 mt-6">
                <div class="w-3 h-3 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full"></div>
                <div class="w-3 h-3 bg-gradient-to-r from-blue-400 to-cyan-400 rounded-full"></div>
                <div class="w-3 h-3 bg-gradient-to-r from-emerald-400 to-teal-400 rounded-full"></div>
              </div>
            </div>
          </div>
          
          <!-- Team Member 3 -->
          <div class="group relative bg-white/10 backdrop-blur-lg border border-white/20 rounded-3xl p-8 text-center shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-[1.05] hover:bg-white/15">
            <!-- Hover gradient effect -->
            <div class="absolute inset-0 bg-gradient-to-br from-teal-500/10 to-emerald-500/10 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <div class="relative z-10">
              <div class="w-28 h-28 bg-gradient-to-r from-teal-500 to-emerald-500 rounded-full flex items-center justify-center text-white text-3xl font-black mx-auto mb-6 shadow-xl group-hover:scale-110 transition-transform duration-300 relative">
                <div class="absolute inset-0 bg-gradient-to-r from-teal-600 to-emerald-600 rounded-full animate-pulse opacity-50"></div>
                <span class="relative z-10">M</span>
              </div>
              
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-emerald-200 transition-colors duration-300">Dr. Michael Chen</h3>
              <p class="text-emerald-300 font-semibold mb-4 text-lg">Head of Learning Sciences</p>
              <p class="text-white/70 leading-relaxed group-hover:text-white/90 transition-colors duration-300">
                Educational psychologist from Stanford with expertise in personalized learning methodologies. Research pioneer in cognitive learning patterns.
              </p>
              
              <!-- Achievement badges -->
              <div class="flex justify-center space-x-2 mt-6">
                <div class="w-3 h-3 bg-gradient-to-r from-emerald-400 to-teal-400 rounded-full"></div>
                <div class="w-3 h-3 bg-gradient-to-r from-blue-400 to-cyan-400 rounded-full"></div>
                <div class="w-3 h-3 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Team stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto mt-20">
          <div class="text-center">
            <div class="text-4xl font-black text-cyan-300 mb-2">50+</div>
            <div class="text-white/70 text-sm font-medium">Years Combined Experience</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-black text-purple-300 mb-2">15+</div>
            <div class="text-white/70 text-sm font-medium">Patents & Research Papers</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-black text-emerald-300 mb-2">100M+</div>
            <div class="text-white/70 text-sm font-medium">Data Points Analyzed</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-black text-pink-300 mb-2">24/7</div>
            <div class="text-white/70 text-sm font-medium">Innovation Drive</div>
          </div>
        </div>
      </div>
      
      <!-- Bottom gradient fade -->
      <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-white to-transparent"></div>
    </section>

    <!-- Values Section -->
    <section class="relative py-32 bg-gradient-to-br from-slate-50 via-white to-blue-50 overflow-hidden">
      <!-- Background decorative elements -->
      <div class="absolute inset-0">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-r from-blue-400/20 to-purple-400/20 rounded-full blur-3xl animate-float"></div>
        <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-r from-purple-400/20 to-pink-400/20 rounded-full blur-3xl animate-float-delayed"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-r from-cyan-400/15 to-teal-400/15 rounded-full blur-3xl animate-float-slow"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-20">
          <div class="inline-flex items-center bg-gradient-to-r from-blue-600/10 to-purple-600/10 border border-blue-200/50 rounded-full px-6 py-3 mb-8">
            <div class="w-2 h-2 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full mr-3 animate-pulse"></div>
            <span class="text-sm font-semibold text-gray-700 tracking-wide uppercase">Core Values</span>
          </div>
          
          <h2 class="text-5xl md:text-6xl font-black mb-8 bg-gradient-to-r from-gray-900 via-blue-800 to-purple-800 bg-clip-text text-transparent leading-[0.9]">
            Principles That
            <br>
            Drive Excellence
