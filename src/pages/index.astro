---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingElements from '../components/FloatingElements.astro';
---

<Layout>
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center overflow-hidden bg-gradient-to-br from-slate-50 via-blue-50 to-purple-50">
      <!-- Animated Background -->
      <div class="absolute inset-0 bg-gradient-to-r from-blue-600/5 to-purple-600/5 bg-[size:400%_400%] animate-gradient"></div>
      
      <FloatingElements />
      
      <div class="container mx-auto px-4 relative z-10">
