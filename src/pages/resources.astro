<Layout>
  <Header />
  
  <main class="pt-20 min-h-screen bg-gradient-to-br from-slate-50 via-teal-50 to-cyan-50">
    <!-- Header Section -->
    <section class="py-12 bg-white border-b">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Study Resources</h1>
            <p class="text-gray-600">Curated learning materials tailored to your skill level</p>
