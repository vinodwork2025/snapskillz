---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout>
  <Header />
  
  <main class="pt-24 min-h-screen bg-gradient-to-br from-slate-50 via-purple-50 to-pink-50">
    <!-- Header Section -->
    <section class="py-12 bg-white border-b">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Mock Interviews</h1>
            <p class="text-gray-600">Practice with AI-powered interviewers to boost your confidence</p>
          </div>
          <div class="text-right">
            <div class="text-sm text-gray-500">Interviews Completed</div>
            <div class="text-2xl font-bold text-purple-600">12</div>
            <div class="text-sm text-gray-500">This Month</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Interview Types -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-4xl sm:text-4xl font-bold text-gray-900 mb-4 leading-[1.1] pb-2">Choose Your Interview Type</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Practice different types of interviews with AI interviewers tailored to your target role.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto mb-16">
          <!-- Technical Interview -->
          <div class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 cursor-pointer" onclick="showInterviewModal('technical')">
            <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Technical Interview</h3>
            <p class="text-gray-600 mb-4">Coding problems, algorithm questions, and system design discussions.</p>
            <div class="flex items-center justify-between text-sm mb-4">
              <span class="text-blue-600 font-semibold">45-60 minutes</span>
              <span class="text-gray-500">AI Interviewer</span>
            </div>
            <div class="bg-blue-50 rounded-lg p-3">
              <div class="text-sm text-blue-900 font-medium mb-1">Recent Score: 8.5/10</div>
              <div class="text-xs text-blue-700">Excellent problem-solving approach</div>
            </div>
          </div>

          <!-- Behavioral Interview -->
          <div class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 cursor-pointer" onclick="showInterviewModal('behavioral')">
            <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Behavioral Interview</h3>
            <p class="text-gray-600 mb-4">STAR method questions about your experience and soft skills.</p>
            <div class="flex items-center justify-between text-sm mb-4">
              <span class="text-purple-600 font-semibold">30-45 minutes</span>
              <span class="text-gray-500">AI Interviewer</span>
            </div>
            <div class="bg-purple-50 rounded-lg p-3">
              <div class="text-sm text-purple-900 font-medium mb-1">Recent Score: 7.8/10</div>
              <div class="text-xs text-purple-700">Good storytelling, work on conciseness</div>
            </div>
          </div>

          <!-- System Design Interview -->
          <div class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 cursor-pointer" onclick="showInterviewModal('systemdesign')">
            <div class="w-16 h-16 bg-gradient-to-r from-teal-500 to-teal-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">System Design</h3>
            <p class="text-gray-600 mb-4">Design scalable systems and discuss architecture decisions.</p>
            <div class="flex items-center justify-between text-sm mb-4">
              <span class="text-teal-600 font-semibold">60-90 minutes</span>
              <span class="text-gray-500">Senior AI Interviewer</span>
            </div>
            <div class="bg-teal-50 rounded-lg p-3">
              <div class="text-sm text-teal-900 font-medium mb-1">Recent Score: 6.5/10</div>
              <div class="text-xs text-teal-700">Focus on scalability considerations</div>
            </div>
          </div>
        </div>

        <!-- Quick Start Section -->
        <div class="text-center">
          <div class="bg-white rounded-2xl shadow-lg p-8 max-w-2xl mx-auto">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Quick Interview Practice</h3>
            <p class="text-gray-600 mb-6">Start a 15-minute practice session with common interview questions.</p>
            <button onclick="startQuickInterview()" class="bg-gradient-to-r from-purple-600 to-pink-600 text-white px-8 py-4 rounded-full font-semibold hover:shadow-lg transition-all duration-300">
              Start Quick Practice
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Interview Modal -->
    <div class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm z-50 hidden" id="interview-modal">
      <div class="min-h-screen flex items-center justify-center p-4">
        <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full p-8">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-2xl font-bold text-gray-900" id="modal-title">Technical Interview</h3>
            <button onclick="closeInterviewModal()" class="text-gray-500 hover:text-gray-700">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          
          <div class="mb-6" id="modal-content">
            <p class="text-gray-600 mb-6" id="modal-description">
              Practice coding problems and technical discussions with our AI interviewer.
            </p>
            
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Experience Level</label>
                <select class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" id="experience-level">
                  <option value="junior">Junior (0-2 years)</option>
                  <option value="mid">Mid-level (3-5 years)</option>
                  <option value="senior">Senior (5+ years)</option>
                </select>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Focus Area</label>
                <select class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" id="focus-area">
                  <option value="frontend">Frontend Development</option>
                  <option value="backend">Backend Development</option>
                  <option value="fullstack">Full-stack Development</option>
                  <option value="mobile">Mobile Development</option>
                  <option value="devops">DevOps/Infrastructure</option>
                </select>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Duration</label>
                <div class="grid grid-cols-3 gap-3">
                  <button class="duration-btn p-3 border border-gray-300 rounded-lg text-center hover:bg-purple-50 hover:border-purple-300" data-duration="15">
                    15 min
                  </button>
                  <button class="duration-btn p-3 border border-purple-500 bg-purple-50 rounded-lg text-center" data-duration="30">
                    30 min
                  </button>
                  <button class="duration-btn p-3 border border-gray-300 rounded-lg text-center hover:bg-purple-50 hover:border-purple-300" data-duration="60">
                    60 min
                  </button>
                </div>
              </div>
            </div>
          </div>
          
          <div class="flex items-center justify-between pt-6">
            <button onclick="closeInterviewModal()" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
              Cancel
            </button>
            <button onclick="startInterview()" class="px-8 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg font-semibold hover:shadow-lg transition-all duration-300">
              Start Interview
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Interview in Progress -->
    <section class="hidden py-12" id="interview-interface">
      <div class="container mx-auto px-4 max-w-4xl">
        <!-- Interview Header -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900" id="interviewer-name">Sarah Chen</h3>
                <p class="text-gray-600" id="interviewer-role">Senior Software Engineer at TechCorp</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="text-center">
                <div class="text-sm text-gray-500">Time Remaining</div>
                <div class="text-xl font-bold text-purple-600" id="interview-timer">29:45</div>
              </div>
              <button onclick="endInterview()" class="text-red-500 hover:text-red-700 p-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
          </div>
          
          <!-- Status Indicator -->
          <div class="mt-4 flex items-center space-x-2">
            <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
            <span class="text-sm text-gray-600">Recording in progress...</span>
          </div>
        </div>

        <!-- Interview Content -->
        <div class="grid lg:grid-cols-2 gap-8">
          <!-- Video/Audio Interface -->
          <div class="bg-white rounded-2xl shadow-lg p-6">
            <div class="aspect-video bg-gradient-to-br from-gray-900 to-gray-800 rounded-xl flex items-center justify-center mb-4">
              <div class="text-center text-white">
                <div class="w-16 h-16 bg-purple-500 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <p class="text-sm">Camera Feed</p>
              </div>
            </div>
            
            <!-- Controls -->
            <div class="flex items-center justify-center space-x-4">
              <button class="w-10 h-10 bg-gray-500 rounded-full flex items-center justify-center text-white hover:bg-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2"></path>
                </svg>
              </button>
              <button class="w-10 h-10 bg-gray-500 rounded-full flex items-center justify-center text-white hover:bg-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 01.814-2.139m5.814-.814L12 12"></path>
                </svg>
              </button>
            </div>
          </div>
          
          <!-- Current Question/Task -->
          <div class="bg-white rounded-2xl shadow-lg p-6">
            <div class="mb-6">
              <h4 class="text-lg font-bold text-gray-900 mb-3">Current Question:</h4>
              <p class="text-gray-700 mb-4" id="current-question">
                "Tell me about a time when you had to work with a difficult team member. How did you handle the situation?"
              </p>
              
              <div class="bg-blue-50 rounded-lg p-4 mb-4">
                <h5 class="font-semibold text-blue-900 mb-2">💡 Tip:</h5>
                <p class="text-blue-800 text-sm">Use the STAR method (Situation, Task, Action, Result) to structure your response.</p>
              </div>
            </div>
            
            <!-- Notes Area -->
            <div>
              <h5 class="font-semibold text-gray-900 mb-2">Your Notes:</h5>
              <textarea 
                class="w-full h-32 p-3 border border-gray-300 rounded-lg resize-none focus:ring-2 focus:ring-purple-500"
                placeholder="Take notes here during your response..."
                id="interview-notes"
              ></textarea>
            </div>
            
            <!-- Action Buttons -->
            <div class="mt-6 flex items-center space-x-3">
              <button class="flex-1 bg-purple-600 text-white py-2 px-4 rounded-lg hover:bg-purple-700 transition-colors">
                I'm Ready
              </button>
              <button class="flex-1 border border-gray-300 text-gray-700 py-2 px-4 rounded-lg hover:bg-gray-50 transition-colors">
                Need More Time
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Interview History -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Your Interview History</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Track your progress and review feedback from previous interviews.
          </p>
        </div>
        
        <div class="max-w-4xl mx-auto">
          <div class="bg-white rounded-2xl shadow-lg border overflow-hidden">
            <div class="p-6 border-b border-gray-200">
              <h3 class="text-lg font-bold text-gray-900">Recent Interviews</h3>
            </div>
            
            <div class="divide-y divide-gray-200">
              <!-- Interview Record -->
              <div class="p-6 hover:bg-gray-50 cursor-pointer" onclick="viewInterviewFeedback('tech-001')">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold text-gray-900">Technical Interview</h4>
                      <p class="text-sm text-gray-600">Frontend Development • 45 minutes</p>
                      <p class="text-xs text-gray-500">Yesterday, 2:30 PM</p>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="text-2xl font-bold text-green-600">8.5</div>
                    <p class="text-sm text-gray-500">Overall Score</p>
                  </div>
                </div>
              </div>
              
              <!-- Interview Record -->
              <div class="p-6 hover:bg-gray-50 cursor-pointer" onclick="viewInterviewFeedback('behavioral-002')">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold text-gray-900">Behavioral Interview</h4>
                      <p class="text-sm text-gray-600">Leadership & Communication • 30 minutes</p>
                      <p class="text-xs text-gray-500">3 days ago, 10:15 AM</p>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="text-2xl font-bold text-blue-600">7.8</div>
                    <p class="text-sm text-gray-500">Overall Score</p>
                  </div>
                </div>
              </div>
              
              <!-- Interview Record -->
              <div class="p-6 hover:bg-gray-50 cursor-pointer" onclick="viewInterviewFeedback('system-003')">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold text-gray-900">System Design Interview</h4>
                      <p class="text-sm text-gray-600">Scalable Architecture • 60 minutes</p>
                      <p class="text-xs text-gray-500">1 week ago, 4:00 PM</p>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="text-2xl font-bold text-orange-600">6.5</div>
                    <p class="text-sm text-gray-500">Overall Score</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <script>
    let currentInterviewType = null;
    let interviewTimer = null;

    function showInterviewModal(type) {
      currentInterviewType = type;
      const modal = document.getElementById('interview-modal');
      const title = document.getElementById('modal-title');
      const description = document.getElementById('modal-description');
      
      const interviewTypes = {
        technical: {
          title: 'Technical Interview',
          description: 'Practice coding problems, algorithm questions, and technical discussions with our AI interviewer.'
        },
        behavioral: {
          title: 'Behavioral Interview',
          description: 'Practice STAR method questions about your experience, leadership, and soft skills.'
        },
        systemdesign: {
          title: 'System Design Interview',
          description: 'Design scalable systems and discuss architecture decisions with a senior AI interviewer.'
        }
      };
      
      title.textContent = interviewTypes[type].title;
      description.textContent = interviewTypes[type].description;
      
      modal.classList.remove('hidden');
      document.body.classList.add('overflow-hidden');
    }

    function closeInterviewModal() {
      document.getElementById('interview-modal').classList.add('hidden');
      document.body.classList.remove('overflow-hidden');
    }

    function startInterview() {
      closeInterviewModal();
      
      // Hide main content and show interview interface
      document.querySelector('section:nth-child(3)').classList.add('hidden');
      document.querySelector('section:nth-child(4)').classList.add('hidden');
      document.getElementById('interview-interface').classList.remove('hidden');
      
      // Start timer (30 minutes default)
      startInterviewTimer(30 * 60);
      
      // Load first question based on interview type
      loadInterviewQuestion();
    }

    function startQuickInterview() {
      currentInterviewType = 'quick';
      startInterview();
    }

    function loadInterviewQuestion() {
      const questions = {
        technical: "Explain the difference between '==' and '===' in JavaScript and provide examples.",
        behavioral: "Tell me about a time when you had to work with a difficult team member. How did you handle the situation?",
        systemdesign: "Design a URL shortening service like bit.ly. Consider scalability, reliability, and performance.",
        quick: "What's your greatest professional achievement and why are you proud of it?"
      };
      
      document.getElementById('current-question').textContent = questions[currentInterviewType] || questions.quick;
    }

    function startInterviewTimer(seconds) {
      if (interviewTimer) clearInterval(interviewTimer);
      
      interviewTimer = setInterval(() => {
        const minutes = Math.floor(seconds / 60);
        const remainingSeconds = seconds % 60;
        document.getElementById('interview-timer').textContent = 
          `${minutes}:${remainingSeconds.toString().padStart(2, '0')}`;
        
        if (seconds <= 0) {
          clearInterval(interviewTimer);
          alert('Time\'s up! Your interview has ended.');
          endInterview();
        }
        
        seconds--;
      }, 1000);
    }

    function endInterview() {
      if (interviewTimer) {
        clearInterval(interviewTimer);
        interviewTimer = null;
      }
      
      // Show feedback modal or redirect to feedback page
      alert('Interview completed! Generating your feedback report...');
      
      // Return to main interface
      document.getElementById('interview-interface').classList.add('hidden');
      document.querySelector('section:nth-child(3)').classList.remove('hidden');
      document.querySelector('section:nth-child(4)').classList.remove('hidden');
    }

    function viewInterviewFeedback(interviewId) {
      alert(`Opening detailed feedback for interview: ${interviewId}`);
      // In a real app, this would navigate to a detailed feedback page
    }

    // Duration button selection
    document.addEventListener('DOMContentLoaded', () => {
      const durationBtns = document.querySelectorAll('.duration-btn');
      durationBtns.forEach(btn => {
