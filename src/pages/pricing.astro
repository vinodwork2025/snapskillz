    // Enhanced pricing toggle functionality
    document.addEventListener('DOMContentLoaded', () => {
      const monthlyBtn = document.getElementById('monthly-btn');
      const yearlyBtn = document.getElementById('yearly-btn');
      const monthlyPrices = document.querySelectorAll('.monthly-price');
      const yearlyPrices = document.querySelectorAll('.yearly-price');
      const yearlySavings = document.querySelectorAll('.yearly-savings');

      function setMonthly() {
        monthlyBtn?.classList.add('bg-gradient-to-r', 'from-blue-600', 'to-purple-600', 'text-white', 'shadow-lg');
        monthlyBtn?.classList.remove('text-gray-600', 'hover:text-gray-900');
        yearlyBtn?.classList.remove('bg-gradient-to-r', 'from-blue-600', 'to-purple-600', 'text-white', 'shadow-lg');
        yearlyBtn?.classList.add('text-gray-600', 'hover:text-gray-900');
        
        monthlyPrices.forEach(price => price.classList.remove('hidden'));
        yearlyPrices.forEach(price => price.classList.add('hidden'));
        yearlySavings.forEach(saving => saving.classList.add('hidden'));
      }

      function setYearly() {
        yearlyBtn?.classList.add('bg-gradient-to-r', 'from-blue-600', 'to-purple-600', 'text-white', 'shadow-lg');
        yearlyBtn?.classList.remove('text-gray-600', 'hover:text-gray-900');
        monthlyBtn?.classList.remove('bg-gradient-to-r', 'from-blue-600', 'to-purple-600', 'text-white', 'shadow-lg');
        monthlyBtn?.classList.add('text-gray-600', 'hover:text-gray-900');
        
        yearlyPrices.forEach(price => price.classList.remove('hidden'));
        monthlyPrices.forEach(price => price.classList.add('hidden'));
        yearlySavings.forEach(saving => saving.classList.remove('hidden'));
      }

      monthlyBtn?.addEventListener('click', setMonthly);
      yearlyBtn?.addEventListener('click', setYearly);

      // Initialize with monthly
      setMonthly();
    });
  </script>
