    <!-- Pricing Cards -->
    <section class="pb-20 relative">
      <div class="container mx-auto px-6">
        <div class="grid lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
          
          <!-- Starter Plan -->
          <div class="group relative">
            <div class="absolute inset-0 bg-gradient-to-r from-gray-200 to-gray-300 rounded-3xl blur opacity-25 group-hover:opacity-40 transition-opacity duration-300"></div>
